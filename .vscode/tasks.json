{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build all files", // Changed label for clarity
      "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceFolder}\\src\\main.cpp", // Compiles main.cpp
        "${workspaceFolder}\\src\\calculator.cpp", // Compiles calculator.cpp
        "-I${workspaceFolder}\\include", // Tells the compiler where to find headers
        "-o",
        "${workspaceFolder}\\calculator.exe" // Names the final executable
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated to build the entire project."
    }
  ],
  "version": "2.0.0"
}
